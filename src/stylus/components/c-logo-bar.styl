/*
  @Component: Logo bar
  @Creator: Alex Ward
  @Description: Lives in the header-container component and contains the main page logo and the 'switch to other intranet' link
*/

.c-logo-bar {
  position: relative;
  background-color: $dark;
  padding: $spacing*3 $spacing $spacing;
   img {
     height: $spacing*3.6;
   }
   &--switch {
     position: absolute;
     top: 40%;
     right: $spacing;
     color: $light;
   }
}

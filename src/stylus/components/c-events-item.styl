.c-events-item {
  position: relative;
  clearfix();
  h1 {
    ff-title();
    margin-bottom: $spacing;
    a {
      text-decoration: none;
    }
  }
  margin-bottom: $spacing*2;
  +above(m) {
    margin-bottom: 0;
    column(1/2, $cycle: 2);
  }

  h1, &--time, &--location {
    display: block;
    padding-left: 30%;
  }

  &--time, &--location {
    clear:both;
    font-size: $smallCopy;
    h2 {
      span(1/3);
      font-weight: bold;
    }
    time {
      span(2/3)
    }
    address {
      span(2/3)
    }
  }
}

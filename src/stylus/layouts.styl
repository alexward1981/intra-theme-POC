// the 'main' layout

main {
  padding: $spacing;
  +above(l) {
    padding: 0;
  }
  .l-primary {
    +above(m) {
      column(2/3);
    }
  }
  .l-secondary {
    +above(m) {
      column(1/3);
    }
  }
}

// The 'footer' layout
.c-footer {
  .l-primary {
    padding: $spacing*2;
    +above(m) {
      padding: $spacing*3;
      column(4/5);
    }
  }
  .l-secondary {
    +above(m) {
      padding: $spacing*2;
      column(1/5);
      padding: $spacing*3 0;
    }
  }
}
